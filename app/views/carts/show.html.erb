<% if !notice.nil? %>
 <p id="notice"><%= notice %></p>
<% end %>

<div class="cart_title" >Your Cart</div>
	<table>
	<% @cart.line_items.each do |item| %>
		<tr>
			<td><%= item.quantity %>&times;</td>
			<td><%= item.product.title %></td>
			<td class="item_price" ><%= number_to_currency(item.price) %></td>
			<% if item.quantity > 1 %>
			<td><%= button_to 'Remove one item', line_item_path(item, :del_all => :false), :confirm => "Remove #{item.product.title}?", :method => :delete %></td>
			<% end %>
			<td><%= button_to 'Remove all items', line_item_path(item, :del_all => :true), :confirm => "Remove #{item.product.title}?", :method => :delete %></td>
		</tr>
	<% end %>
		<tr class="total_line" >
			<td colspan="2" >Total</td>
			<td class="total_cell" ><%= number_to_currency(@cart.total_price) %></td>
		</tr>
		<tr>
			<td colspan='3'><%= button_to 'Back to store', store_path %></td>
			<td><%= button_to 'Empty cart', @cart, :confirm => "Are you shure?", :method => :delete %></td>
		</tr>	
</table>
