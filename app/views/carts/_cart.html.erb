<% unless cart.line_items.empty? %>
	<div class="cart_title" >Your Cart</div>
		<table>
			<%= render(cart.line_items) %>
			<tr class="total_line" >
				<td colspan="2" >Total</td>
				<td class="total_cell" ><%= number_to_currency(cart.total_price) %></td>
			</tr>
			<tr>
				<td colspan='2'><%= button_to "Checkout", new_order_path, :class => :empty_button, :method => :get %></td>
				<td colspan='2'><%= button_to 'Empty cart', cart, :confirm => "Are you shure?", :class => :empty_button, :method => :delete, :remote => true %></td>
			</tr>	
	</table>
<% end %>	