<% if notice %>
	<p id="notice" ><%= notice %></p>
<% end %>
<% if @variant %>
<div class='counter'>
	<%= pluralize(session[:count], "visit") %> 
</div>
<% end %>
<h1><%= t('.title_html') %></h1>
<p><%= paginate @products, :window => 3 %></p>
<% @products.each do |product| %>
	<div class="entry" >
		<% if product.image_url.nil? %>
			<%= link_to image_tag(product.images.first.image.thumb('50x50').url), product.images.first.image.url, :class => 'list_image' %>
		<% else %>
		<%= link_to image_tag(product.image_url), line_items_path(:product_id => product), :method => :post, :remote => true %>
		<% end %>
		<h3><%= product.title %></h3>
		<%=sanitize product.description %>
			<div class="price_line" >
				<span class="price" ><%= number_to_currency(product.price) %></span>
				<%= button_to t('.add_html'), line_items_path(:product_id => product),
:remote => true %>
			</div>
			<div class="comments"><%= link_to "Comments(#{product.messages.count})", product_messages_path(product), :remote => true %></div>
			<div id="<%= "#{product.id}" %>"></div>
	</div>
<% end %>
