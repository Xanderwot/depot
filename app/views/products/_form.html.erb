<%= semantic_form_for @product do |f| %>
    <%= f.input :title, :input_html => { :size => 40 } %>
    <%= f.input :description, :input_html => { :cols => 40, :rows => 4 } %>
    <%= f.input :image_url, :input_html => { :size => 40 } %>
    <%= f.input :price %>
    <%= f.actions :submit, :cancel %>
  <% end %>